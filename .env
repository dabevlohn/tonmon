# Настройки сервера
PORT=3001
HOST=0.0.0.0

# Настройки TON сети - Расширенная конфигурация для решения ADNL проблем
TON_TESTNET=false

# Множественные конфигурации для fallback
TON_CONFIG_URL=https://ton.org/global.config.json
TON_FALLBACK_CONFIG_1=https://ton-blockchain.github.io/global.config.json
TON_FALLBACK_CONFIG_2=https://raw.githubusercontent.com/ton-blockchain/ton-blockchain.github.io/master/global.config.json

# Настройки таймаутов и повторов для ADNL
TON_CONNECTION_TIMEOUT=30
TON_MAX_RETRIES=5
TON_RETRY_DELAY=3

# API ключи (могут помочь с приоритетом)
# TON_API_KEY=your_ton_api_key_here

# Настройки TonAPI (альтернативный источник данных)
TONAPI_ENDPOINT=https://tonapi.io
# TONAPI_KEY=your_tonapi_key_here

# Настройки прокси (если нужен для обхода блокировок)
# HTTP_PROXY=http://proxy.example.com:8080
# HTTPS_PROXY=https://proxy.example.com:8080
# NO_PROXY=localhost,127.0.0.1

# Логирование - подробная диагностика ADNL проблем
RUST_LOG=websocket_ton_service=info,tonlib_client=warn,tonlib_client::client::callback=warn

# Режим диагностики (включает дополнительные проверки)
TON_DIAGNOSTIC_MODE=true
TON_CONNECTION_CHECK_INTERVAL=60

# Настройки мониторинга
POLLING_INTERVAL_SEC=10  # Увеличен интервал для снижения нагрузки
MAX_CACHED_TRACES=1000

# Региональные настройки (может помочь при блокировках)
# TON_USE_IPV4_ONLY=true
# TON_DNS_SERVERS=8.8.8.8,1.1.1.1
